<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/imform_detail_header"
        layout="@layout/header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/white"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imform_avatar"
            android:src="@mipmap/default_avatar"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginLeft="47dp"
            android:layout_centerVertical="true"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imform_avatar"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="47dp"
            >
            <TextView
                android:id="@+id/imform_name"
                android:text="姓名：操你大爷"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/imform_id"
                android:paddingTop="18dp"
                android:text="CODO ID:"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </RelativeLayout>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="82dp"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:text="发送信息"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/btn_chat"
        android:background="@drawable/btn_imformation_bg"
        android:shadowColor="#c4f1f1"
        android:shadowRadius="1"
        android:shadowDx="1"
        android:shadowDy="0"
        />
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:text="删除好友"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/btn_delete"
        android:background="@drawable/btn_imformation_bg"
        android:shadowColor="#c4f1f1"
        android:shadowRadius="1"
        android:shadowDx="1"
        android:shadowDy="0"
        />
</LinearLayout>