<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="#ffffff"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/applier_avatar"
        android:src="@mipmap/default_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="19dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_applier_name"
        android:layout_toRightOf="@+id/applier_avatar"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="22dp"
        android:text="测试"
        android:textColor="#5e5e5e"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_reason"
        android:layout_below="@+id/tv_applier_name"
        android:layout_alignLeft="@+id/tv_applier_name"
        android:layout_marginTop="10dp"
        android:text="希望成为您的好友"
        android:textSize="12sp"
        android:textColor="#5e5e5e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_accept"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="接受"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_new_friend_btn"
        android:layout_width="40dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/btn_decline"
        android:layout_toLeftOf="@+id/btn_accept"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="拒绝"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_new_friend_btn2"
        android:layout_width="40dp"
        android:layout_height="24dp" />

    

</RelativeLayout>