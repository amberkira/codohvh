<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="2dp"
    android:orientation="vertical"
    >
    <include android:id="@+id/img_time_self"
        layout="@layout/im_time_remainder"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        >
        <ImageView
            android:id="@+id/img_user_self_icon"
            android:background="@android:color/black"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <ImageView
            android:id="@+id/img_user_self_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_user_self_icon"
            android:layout_marginRight="2dp"
            android:background="@drawable/dialog_user"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            />
        <ProgressBar
            android:id="@+id/img_user_self_pb"
            android:layout_toLeftOf="@+id/img_user_self_content"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateDrawable="@drawable/progressbar_im"
            />
    </RelativeLayout>
</LinearLayout>