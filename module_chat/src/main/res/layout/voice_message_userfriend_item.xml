<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >
    <include layout="@layout/im_time_remainder"
        android:id="@+id/voice_time_friend"
        />
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/voice_user_friend_icon"
            android:layout_alignParentLeft="true"
            android:background="@android:color/black"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <ImageView
            android:id="@+id/voice_user_friend"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/voice_user_friend_icon"
            android:layout_marginLeft="1dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:background="@drawable/im_item_voice_friend_seleoter"
            />
        <TextView
            android:id="@+id/voice_user_friend_time_length_1"
            android:layout_toRightOf="@+id/voice_user_friend"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:text="1s"
            android:paddingLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ProgressBar
            android:id="@+id/voice_user_friend_pb"
            android:layout_toRightOf="@id/voice_user_friend_time_length_1"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateDrawable="@drawable/progressbar_im"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/text_user_friend_unread_remainder"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="#ff0000"
            android:layout_toRightOf="@+id/voice_user_friend"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
</LinearLayout>