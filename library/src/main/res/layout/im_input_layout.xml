<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="1px"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#e9e9e9"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        >
        <ImageView
            android:id="@+id/btn_voice_onoff"
            android:layout_margin="2dp"
            android:background="@drawable/im_input_voice_selector"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ViewStub
            android:id="@+id/voice_dissmis"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout="@layout/voice_dissmis_layout"
            />
        <ViewStub
            android:id="@+id/voice_invoke"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout="@layout/voice_ivoke_layout"
            />
        <ImageView
            android:id="@+id/btn_im_plus"
            android:layout_margin="2dp"
            android:src="@drawable/im_input_plus_selector"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_margin="2dp"
            android:id="@+id/btn_im_send"
            android:text="SEND"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/im_btn_send_background"
            android:gravity="center"
            android:layout_width="45dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>
    <ViewStub
        android:id="@+id/im_plus_layout"
        android:layout_marginTop="1px"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout="@layout/plus_extend_layout"
        />
</LinearLayout>
